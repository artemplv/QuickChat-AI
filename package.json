{
  "name": "messenger-web-app",
  "version": "1.0.0",
  "description": "Web messenger project",
  "main": "./src/server.js",
  "scripts": {
    "build": "tsc",
    "postbuild": "cp -r ./src/static ./src/index.html ./build && npm run sass",
    "start": "node ./build/server.js",
    "tsc": "tsc",
    "sass": "sass ./build/static/assets/css",
    "pretest": "npm run build",
    "test": "jest ./build"
  },
  "jest": {
    "verbose": true,
    "testURL": "http://localhost:3001",
    "setupFilesAfterEnv": [ "./tests/setupTests.js" ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/artemplv/mf.messenger.praktikum.yandex.git"
  },
  "author": "Artem Polevoy",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/artemplv/mf.messenger.praktikum.yandex/issues"
  },
  "homepage": "https://github.com/artemplv/mf.messenger.praktikum.yandex#readme",
  "engines": {
    "node": ">=12.0.0"
  },
  "dependencies": {
    "express": "^4.17.1",
    "handlebars": "^4.7.6",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/preset-env": "^7.13.9",
    "@babel/preset-typescript": "^7.13.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "jest": "^26.6.3",
    "jest-handlebars": "^1.0.1",
    "regenerator-runtime": "^0.13.7",
    "sass": "^1.32.8",
    "sinon": "^9.2.4"
  }
}
